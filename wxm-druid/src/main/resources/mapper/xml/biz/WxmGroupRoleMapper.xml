<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxm.druid.mapper.biz.WxmGroupRoleMapper">
    <delete id="deleteByGroupIdAndRoleIds">
        delete from wxm_group_role
        where group_id=#{groupId,jdbcType=BIGINT}
        and role_id in
        <foreach collection="list" item="roleId" open="(" close=")" separator=",">
            #{roleId,jdbcType=BIGINT}
        </foreach>
    </delete>


    <delete id="deleteByGroupIds">
        delete from wxm_group_role
        where group_id in
        <foreach collection="list" item="groupId" open="(" close=")" separator=",">
            #{groupId,jdbcType=BIGINT}
        </foreach>
    </delete>

    <delete id="deleteByRoleIds">
        delete from wxm_group_role
        where role_id in
        <foreach collection="list" item="roleId" open="(" close=")" separator=",">
            #{roleId,jdbcType=BIGINT}
        </foreach>
    </delete>
</mapper>
